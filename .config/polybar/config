[global/wm]
margin-top = 0
margin-bottom = 0

[settings]
screenchange-reload = true

;; COLORS DEFINITION
[colors]
background_dark = ${xrdb:color0}
background_light = ${xrdb:color8}
foreground_dark = ${xrdb:color7}
foreground_light = ${xrdb:color15}
red_dark = ${xrdb:color1}
red_light = ${xrdb:color9}
green_dark = ${xrdb:color2}
green_light = ${xrdb:color10}
yellow_dark = ${xrdb:color3}
yellow_light = ${xrdb:color11}
blue_dark = ${xrdb:color4}
blue_light = ${xrdb:color12}
magenta_dark = ${xrdb:color5}
magenta_light = ${xrdb:color13}
cyan_dark = ${xrdb:color6}
cyan_light = ${xrdb:color14}
;; additional colors
;; accent_dark = ${colors.blue_dark}
;; accent_light = ${colors.blue_light}

;; MAIN BAR
;; Compose the main bar for the primary monitor
[bar/mainbar]
monitor = ${env:MONITOR:HDMI-0}
width = 100%
height = 30
spacing = 1
offset-x = 0
offset-y = 0
radius-top = 0
radius-bottom = 0
fixed-center = true

background = ${colors.background_dark}
foreground = ${colors.foreground_dark}

line-size = 3
line-color = ${colors.blue_dark}
;; overline-size = 0
;; overline-color = ${colors.background_dark}
;; underline-size = 0
;; underline-color = ${colors.background_dark}

border-top-size = 0
border-bottom-size = 2
border-color = ${colors.background_light}

padding-left = 0
padding-right = 2

module-margin-left = 0
module-margin-right = 0

font-0 = FantasqueSansMono:pixelsize=12;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1

modules-left = i3
modules-center = date
modules-right = volume

tray-position = right
tray-padding = 2
tray-detached = false
;; tray-maxsize = 16
;; tray-transparent = false
;; tray-offset-x = 0
;; tray-offset-y = 0
tray-background = ${colors.background_light}

cursor-click = pointer
cursor-scroll = ns-resize

;; AUX BAR
;; Compose the auxiliary bar for the secondary monitor
[bar/auxbar]
monitor = ${env:MONITOR:DVI-0}
width = 100%
height = 30
spacing = 0
fixed-center = true

background = ${colors.background_dark}
foreground = ${colors.foreground_dark}

line-size = 3
line-color = ${colors.blue_light}

border-top-size = 0
border-bottom-size = 2
border-color = ${colors.background_light}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = FantasqueSansMono:pixelsize=12;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1

modules-left = i3
modules-center = date
modules-right = memory cpu volume

tray-position = none
tray-padding = 0

cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output device as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-background = ${colors.background_light}
label-mode-foreground = ${colors.foreground_dark}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.blue_dark}
label-focused-underline = ${colors.blue_dark}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.red_dark}
label-urgent-padding = 2

[module/filesystem]
type = internal/fs
interval = 30

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground_dark}

[module/memory]
type = internal/memory

format = <label> <bar-used>
format-padding = 2
format-background = ${colors.background_light}
format-foreground = ${colors.foreground_dark}
format-underline = ${colors.blue_dark}

label = RAM:
label-font = 3

bar-used-width = 10
bar-used-indicator = |
bar-used-indicator-font = 4
bar-used-indicator-foreground = ${colors.foreground_light}
bar-used-fill = ─
bar-used-fill-font = 4
bar-used-fill-foreground = ${colors.foreground_light}
bar-used-empty = ─
bar-used-empty-font = 4
bar-used-empty-foreground = ${colors.foreground_dark}

[module/cpu]
type = internal/cpu
interval = 0.5

format = <label> <ramp-coreload>
format-background = ${colors.background_light}
format-foreground = ${colors.foreground_dark}
format-underline = ${colors.blue_dark}
format-padding = 1

label = CPU:
label-font = 1

ramp-coreload-0 = ▁
ramp-coreload-0-font = 5
ramp-coreload-0-foreground = ${colors.foreground_dark}
ramp-coreload-1 = ▂
ramp-coreload-1-font = 5
ramp-coreload-1-foreground = ${colors.foreground_dark}
ramp-coreload-2 = ▃
ramp-coreload-2-font = 5
ramp-coreload-2-foreground = ${colors.foreground_dark}
ramp-coreload-3 = ▄
ramp-coreload-3-font = 5
ramp-coreload-3-foreground = ${colors.yellow_dark}
ramp-coreload-4 = ▅
ramp-coreload-4-font = 5
ramp-coreload-4-foreground = ${colors.yellow_dark}
ramp-coreload-5 = ▆
ramp-coreload-5-font = 5
ramp-coreload-5-foreground = ${colors.red_dark}
ramp-coreload-6 = ▇
ramp-coreload-6-font = 5
ramp-coreload-6-foreground = ${colors.red_dark}
ramp-coreload-7 = █
ramp-coreload-7-font = 5
ramp-coreload-7-foreground = ${colors.red_dark}

[module/date]
type = internal/date
interval = 5

label =  %time% %date%

date =
date-alt = " %d.%m.%Y"
time = %H:%M
time-alt = %H:%M:%S

format-prefix = " "
format-padding = 1
format-background = ${colors.background_light}
format-foreground = ${colors.foreground_dark}
format-prefix-foreground = ${colors.foreground_dark}
format-underline = ${colors.blue_dark}

[module/volume]
type = internal/volume

format-volume-padding = 3
format-volume-background = ${colors.background_light}
format-volume-foreground = ${colors.foreground_dark}
format-volume-underline = ${colors.blue_dark}

format-muted-padding = 1
format-muted-background = ${colors.red_dark}
format-muted-foreground = ${colors.foreground_dark}

label-volume = VOL:%percentage%
label-volume-font = 1
label-muted = sound muted
label-muted-font = 1